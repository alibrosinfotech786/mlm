<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # 1. Do NOT force trailing slash
  RewriteCond %{REQUEST_URI} !(\.[a-zA-Z0-9]{1,5}|/)$
  RewriteRule ^ %{REQUEST_URI}/ [R=302,L]

  # 2. If the file or directory exists, serve it
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 3. Otherwise route everything to Next.js server handler
  RewriteRule ^(.*)$ /index.php [L]
</IfModule>

# Do NOT use DirectoryIndex for Next.js
Options -Indexes
